<h1 class="h1">
    Log in
</h1>
<div>
    <form id="loginForm">
        <div class="input__container">
            <label class="input__label">Email</label>
            <input placeholder="Enter your email" class="input" name="email" required>
        </div>
        <div class="input__container">
            <div class="password-container">
                <label class="input__label">Password</label>
                <input id="password" placeholder="Enter your password" class="input" name="password" type="password" required> 
                <i class="fa fa-eye" id="togglePassword"></i>
            </div>
        </div>
        <button class="button type1" type="submit">
            <span class="btn-txt">Log In</span>
        </button>
    </form>
    <div class="register">
        Don't have an account yet?
        <a class="link" href="/register">
            <strong>Register</strong>
        </a>
    </div>
        
</div>

<link rel="stylesheet" href="./css/login.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
<script src="./js/login.js"></script>